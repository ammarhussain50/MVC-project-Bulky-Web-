@model Product

<form method="post">
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-1">Back to List</a>
            </div>
        </div>


    </div>
</form>