@model Bulky.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<form method="post">
    <div class="container mt-5">
        <div class="card shadow border-0 rounded p-4 border-top border-5">

            <div class="row">

                <!-- LEFT: Product Image + Back Button -->
                <div class="col-md-4 d-flex flex-column justify-content-start align-items-center mb-3 mb-md-0">

                    <!-- Back Button top-left inside column -->
                    <div class="w-100 text-start mb-3">
                        <a asp-area="Customer"
                           asp-controller="Home"
                           asp-action="Index"
                           class="btn btn-outline-secondary btn-sm text-uppercase">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                    </div>

                    <!-- Centered Product Image -->
                    <div class="d-flex align-items-center justify-content-center h-100 w-100">
                        <img src="@Model.ImageUrl"
                             class="img-fluid rounded shadow-sm"
                             alt="@Model.Title" />
                    </div>

                </div>

                <!-- RIGHT: Product Details -->
                <div class="col-md-8 d-flex flex-column justify-content-center">

                    <!-- Title -->
                    <h3 class="fw-bold text-dark">@Model.Title</h3>

                    <!-- Author -->
                    <p class="text-muted mb-2">by <span class="fw-semibold">@Model.Author</span></p>

                    <!-- Category -->
                    <!-- Category -->
                    <span class="badge bg-secondary mb-3 ">
                        @Model.Category.Name
                    </span>


                    <hr />

                    <!-- Description -->
                    <h5 class="fw-bold text-dark mb-2">Description</h5>
                    <p class="text-dark">@Html.Raw(@Model.Description)</p>

                    <!-- ISBN -->
                    <p class="text-muted mb-2"><strong>ISBN:</strong> @Model.ISBN</p>

                    <!-- Price Heading -->
                    <div class="row text-center g-1 mt-3 fw-semibold text-secondary">
                        <div class="col-3 col-md-3">Quantity</div>
                        <div class="col-3 col-md-3">1-50</div>
                        <div class="col-3 col-md-3">51-100</div>
                        <div class="col-3 col-md-3">100+</div>
                    </div>

                    <!-- Pricing Section -->
                    <div class="row text-center g-1 mt-1 fw-bold">
                        <div class="col-3 col-md-3 text-dark">Price</div>
                        <div class="col-3 col-md-3 text-warning">@Model.Price.ToString("c")</div>
                        <div class="col-3 col-md-3 text-primary">@Model.Price50.ToString("c")</div>
                        <div class="col-3 col-md-3 text-success">@Model.Price100.ToString("c")</div>
                    </div>

                    <!-- Count Input -->
                    <div class="row mt-4 mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white border-0 fw-semibold">
                                    Count
                                </span>
                                <input type="number" value="1" class="form-control text-end" />
                            </div>
                        </div>
                    </div>

                    <!-- Add to Cart Button -->
                    <div class="d-flex gap-2">
                        <button type="submit" disabled
                                class="btn btn-primary w-50">
                            <i class="bi bi-cart-plus me-1"></i> Add to Cart (Coming Soon...)
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
