@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 class="text-center fw-bold mb-2">Welcome Back</h2>
                    <p class="text-center text-muted mb-4">Login to continue</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   placeholder="name@example.com"
                                   autocomplete="username" />
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   placeholder="password"
                                   autocomplete="current-password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    Remember me
                                </label>
                            </div>

                            <a asp-page="./ForgotPassword" class="small text-decoration-none">
                                Forgot password?
                            </a>
                        </div>

                        <button type="submit"
                                class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                            Log in
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-1">
                            Don’t have an account?
                            <a asp-page="./Register"
                               asp-route-returnUrl="@Model.ReturnUrl"
                               class="fw-semibold text-decoration-none">
                                Register
                            </a>
                        </p>

                        <a asp-page="./ResendEmailConfirmation"
                           class="small text-decoration-none">
                            Resend email confirmation
                        </a>
                    </div>

                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <!-- OR Divider -->
                        <div class="position-relative my-4 text-center">
                            <hr />
                            <span class="position-absolute top-50 start-50 translate-middle px-3 bg-body text-muted small">
                                OR
                            </span>
                        </div>
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>

                        <form asp-page="./ExternalLogin"
                              asp-route-returnUrl="@Model.ReturnUrl"
                              method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline-secondary rounded-3"
                                            name="provider"
                                            value="@provider.Name">
                                        Continue with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
